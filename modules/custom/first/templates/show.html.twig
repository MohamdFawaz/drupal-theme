<div class="container">
    {{ form }}
</div>


<table class="table table-dark">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">First</th>
        <th scope="col">Last</th>
        <th scope="col">Handle</th>
        <th scope="col">Role</th>
        <th scope="col">Image</th>
    </tr>
    </thead>
    <tbody class="users">
    {% for user in data %}

    <tr>
        <th scope="row">{{ user.pid }}</th>
        <td>{{ user.name }}</td>
        <td>{{ user.surname }}</td>
        <td>{{ user.age }}</td>
        <td>{{ user.role|capitalize }}</td>
        <td><a href="{{ file_url(user.image) }}" target="_blank"><img src="{{ base_path }}{{ file_url(user.image) }}" alt="{{ user.image }}" style="max-width: 100px"/></a></td>
    </tr>
    {% endfor %}
    </tbody>
</table>
